{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true,
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
