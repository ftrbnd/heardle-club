{
	"name": "@repo/database",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:seed": "tsx ./src/postgres/scripts/seed.ts"
	},
	"exports": {
		"./common": {
			"types": "./src/common/index.ts",
			"default": "./dist/common/index.js"
		},
		"./postgres": {
			"types": "./src/postgres/index.ts",
			"default": "./dist/postgres/index.js"
		},
		"./postgres/api": {
			"types": "./src/postgres/api/index.ts",
			"default": "./dist/postgres/api/index.js"
		},
		"./postgres/schema": {
			"types": "./src/postgres/schema/index.ts",
			"default": "./dist/postgres/schema/index.js"
		},
		"./redis": {
			"types": "./src/redis/index.ts",
			"default": "./dist/redis/index.js"
		},
		"./redis/api": {
			"types": "./src/redis/api/index.ts",
			"default": "./dist/redis/api/index.js"
		},
		"./redis/schema": {
			"types": "./src/redis/schema/index.ts",
			"default": "./dist/redis/schema/index.js"
		},
		"./supabase": {
			"types": "./src/supabase/index.ts",
			"default": "./dist/supabase/index.js"
		},
		"./supabase/api": {
			"types": "./src/supabase/api/index.ts",
			"default": "./dist/supabase/api/index.js"
		}
	},
	"devDependencies": {
		"drizzle-kit": "^0.31.1",
		"tsx": "^4.19.4",
		"typescript": "5.8.2"
	},
	"dependencies": {
		"@neondatabase/serverless": "^1.0.1",
		"@supabase/supabase-js": "^2.54.0",
		"@upstash/redis": "^1.35.0",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.44.2",
		"drizzle-seed": "^0.3.1",
		"drizzle-zod": "^0.8.2",
		"zod": "^3.25.57"
	}
}
